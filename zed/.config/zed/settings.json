// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "context_servers": {
    "figma": {
      "source": "custom",
      "enabled": false,
      "command": "bunx",
      "args": [
        "@pyroprompts/mcp-stdio-to-streamable-http-adapter@0.1.0"
      ],
      "env": {
        "URI": "http://127.0.0.1:3845/mcp",
        "MCP_NAME": "figma"
      }
    },
    "playwright": {
      "source": "custom",
      "enabled": false,
      "command": "bunx",
      "args": [
        "@playwright/mcp@latest",
        "--browser",
        "firefox"
      ],
      "env": {}
    },
    "mcp-server-context7": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "default_minimum_tokens": "10000"
      }
    },
    "postgres-context-server": {
      "source": "extension",
      "enabled": false,
      "settings": {
        "database_url": "postgresql://postgres:postgres@localhost:5432/ris"
      }
    }
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    }
  },
  "vim_mode": true,
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "agent_font_size": 16,
  "pane_split_direction_vertical": "right",
  "restore_on_startup": "none",
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Kanagawa Wave"
  },
  "relative_line_numbers": true,
  "languages": {
    "JavaScript": {
      "tab_size": 2
    },
    "TypeScript": {
      "tab_size": 2
    },
    "HTML": {
      "tab_size": 2
    },
    "Svelte": {
      "tab_size": 2
    }
  }
}
