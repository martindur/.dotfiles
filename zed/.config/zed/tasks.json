// Static tasks configuration.
//
// Example:
[
  {
    "label": "lazygit",
    "command": "lazygit",
    "hide": "on_success",
    "reveal": "always"
  },
  {
    "label": "manage-files",
    "command": "ya_zed $ZED_FILE",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true
  },
  {
    "label": "find-file",
    "command": "zed-find-file",
    "shell": {
      "program": "sh"
    },
    "env": {
      "BAT_THEME": "kanagawa"
    },
    "allow_concurrent_runs": false,
    "use_new_terminal": false,
    "reveal": "always",
    "hide": "always"
  },
  {
    "label": "find-project",
    "command": "zed-find-project",
    "shell": {
      "program": "sh"
    },
    "env": {
      "BAT_THEME": "kanagawa"
    },
    "allow_concurrent_runs": false,
    "use_new_terminal": false,
    "reveal": "always",
    "hide": "always"
  },
  {
    "label": "open dotfiles",
    "command": "zed ~/.dotfiles",
    "allow_concurrent_runs": false,
    "use_new_terminal": false,
    "reveal": "always",
    "hide": "always"
  },
  {
    "label": "live-grep",
    "command": "zed-live-grep",
    "shell": {
      "program": "sh"
    },
    "env": {
      "BAT_THEME": "kanagawa"
    },
    "hide": "always",
    "use_new_terminal": false
  },
  {
    "label": "zed-dev: bun dev",
    "command": "zed-dev start bun dev",
    "shell": {
      "program": "sh"
    },
    "allow_concurrent_runs": false,
    "use_new_terminal": false,
    "reveal": "never",
    "hide": "never"
  },
  {
    "label": "zed-dev: attach",
    "command": "zed-dev attach",
    "shell": {
      "program": "sh"
    },
    "env": {
      "BAT_THEME": "kanagawa"
    },
    "use_new_terminal": false,
    "reveal": "always",
    "hide": "always"
  },
  {
    "label": "zed-dev: stop",
    "command": "zed-dev stop",
    "shell": {
      "program": "sh"
    },
    "reveal": "always",
    "hide": "on_success"
  }
]
